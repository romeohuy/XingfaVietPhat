@using WebXingFaUmbraco.Models
@using Umbraco.Web.Models;
@inherits Umbraco.Web.Mvc.UmbracoViewPage<List<Navigation.NavigationList>>

@helper RenderSubItems(List<Navigation.NavigationList> listItems, bool isSubNavigation = false)
{
    <ul class="@(isSubNavigation == false ? "rd-navbar-nav" : "rd-navbar-dropdown")">
        @foreach (var navItem in listItems)
        {
            <li>
                <a href="@navItem.LinkInfo.Url" target="@navItem.LinkInfo.Target" title="@navItem.LinkInfo.Title">@navItem.LinkInfo.Text</a>
                @if (navItem.HasSubNavigation)
                {
                    @RenderSubItems(navItem.NavItems, true)
                }
            </li>

        }
    </ul>
}
